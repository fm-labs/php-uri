{
    "name": "fm-labs/php-uri",
    "description": "Simple URI library for PHP",
    "license": "MIT",
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "fm-labs",
            "email": "office@flowmotion-labs.com"
        }
    ],
    "require": {
        "php": "^7.1",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7|^8|^9"
    },
    "autoload": {
        "psr-4": {
            "FmLabs\\Uri\\": "src/Uri"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FmLabs\\Test\\Uri\\": "tests/Uri"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit",
        "test-verbose": "./vendor/bin/phpunit -vv"
    }
}
